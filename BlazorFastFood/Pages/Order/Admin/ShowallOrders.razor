@page "/admin/showallorder"
@inject IOrderService db
@inject NavigationManager nav
<h3>All Orders</h3>
<div class="row mt-4">
    <div class="cl-6">
        <h4 class="card-title text-black-info">All Items</h4>
    </div>
    <br />
    <br />
    <div class="col-12">
        @if (cat.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th>User Name</th>
                        <th>Phone Number</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in cat)
                    {
                        <tr>
                            <td><img src="@d.ImageUrl" /></td>
                            <td>@d.ItemName</td>
                            <td>@d.Qty</td>
                            <td>Rs. @d.Price.00</td>
                            <td>@d.date</td>
                            <th>@d.UserName</th>
                            <th>@d.PhoneNo</th>
                            <td>
                                @if (d.isdelivered == 0)
                                {
                                    <button class="btn btn-success">Delivered</button>
                                }
                                else if (d.isdelivered == 2)
                                {
                                    <NavLink class="btn btn-success" href="@($"admin/delivered/{d.Id}")">Change to Delivered</NavLink>
                                }
                                else
                                {
                                    <NavLink class="btn btn-primary" href="@($"admin/processing/{d.Id}")">Change to Processing</NavLink>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h4 class="card-title text-black-info">No Menus found under this category. Please try other categories.</h4>
        }
    </div>
</div>
@code {
    List<GetAllOrderDTO> cat = new List<GetAllOrderDTO>();
    protected async override Task OnInitializedAsync()
    {
        string d = Authorize.getusertype();
        if (d.Equals("Admin"))
        {
            cat = await db.GetAllOrders();
        }
        else
        {
            nav.NavigateTo("login/register");
        }
    }

}
